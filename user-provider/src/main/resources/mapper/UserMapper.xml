<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.gdkm.dao.UserDao">
    <insert id="register" parameterType="java.lang.String">
        INSERT INTO USER(upassword,uname,usex) VALUES
        (#{upassword},#{uname},#{usex})
    </insert>
    <select id="login" resultType="edu.gdkm.model.User" parameterType="java.lang.String">
        select * from user where uname=#{uname}
    </select>
</mapper>

